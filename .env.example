IMAGE_TAG=dev-latest

POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_BIND_ADDR=127.0.0.1
REDIS_BIND_ADDR=127.0.0.1
BACKEND_BIND_ADDR=127.0.0.1

BACKEND_ADMIN_EMAIL=
BACKEND_ADMIN_USERNAME=admin
BACKEND_ADMIN_PASSWORD=replace-with-strong-admin-password
BACKEND_ADMIN_IDS=
BACKEND_JWT_SECRET_KEY=replace-with-long-random-jwt-secret
BACKEND_SERVICE_API_KEY=replace-with-long-random-service-key
BACKEND_SERVICE_ACCOUNT_USERNAME=bot_service
BACKEND_ENABLE_LEGACY_LOGIN=false
BACKEND_AUTO_REPAIR_TRANSLATIONS_ON_STARTUP=false
BACKEND_CORS_ORIGINS=["https://your-domain.example"]

BOT_TOKEN=replace-with-telegram-bot-token
AI_API_KEY=
AI_BASE_URL=https://api.fireworks.ai/inference/v1
AI_MODEL=accounts/fireworks/models/deepseek-r1-0528
AI_FIREWORKS_ACCOUNT=fireworks

# Optional AI tuning
AI_MAX_CONCURRENCY=4
AI_REQUEST_TIMEOUT_SEC=60
AI_MAX_RETRIES=6
AI_RETRY_BASE_DELAY_SECONDS=2
AI_QUEUE_TIMEOUT_SEC=10
AI_OVERALL_TIMEOUT_SEC=120
AI_SCALING_UP_MAX_ATTEMPTS=2
AI_SCALING_UP_RETRY_DELAY_SEC=5
AI_DEBUG_ERRORS=false
